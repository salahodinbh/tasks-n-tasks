{
  "openapi": "3.0.0",
  "info": {
    "title": "Seans-Python3-Flask-Rest-Boilerplate",
    "description": "API para gestionar tareas.",
    "version": "1.0.0",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "paths": {
    "/api/tasks": {
      "get": {
        "summary": "Lista todas las tareas",
        "responses": {
          "200": {
            "description": "Lista de tareas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "completed": {
                        "type": "boolean"
                      },
                      "completion_date": {
                        "type": "string",
                        "format": "date-time"
                      }
                    },
                    "required": ["id", "name", "completed", "completion_date"]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "A침ade una nueva tarea",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Comprar leche"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarea a침adida",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "completed": {
                      "type": "boolean"
                    },
                    "completion_date": {
                      "type": "string",
                      "format": "date-time"
                    }
                  },
                  "required": ["id", "name", "completed", "completion_date"]
                }
              }
            }
          },
          "400": {
            "description": "Error en la solicitud",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "The 'name' field is required."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/completedtasks": {
      "get": {
        "summary": "Lista todas las tareas completadas",
        "responses": {
          "200": {
            "description": "Lista de tareas completadas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "completed": {
                        "type": "boolean"
                      },
                      "completion_date": {
                        "type": "string",
                        "format": "date-time"
                      }
                    },
                    "required": ["id", "name", "completed", "completion_date"]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/tasks/{id}": {
      "post": {
        "summary": "Marca una tarea como completada",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarea completada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Task completed successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tarea no encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Task not found"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Elimina una tarea",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Tarea eliminada exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Task deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Tarea no encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Task not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/static/{path}": {
      "get": {
        "summary": "Sirve archivos est치ticos",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Archivo est치tico servido"
          }
        }
      }
    }
  }
}
